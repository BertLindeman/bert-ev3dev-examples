#!/bin/bash -u           
# Script_name     : blinkleds
# Author          : Bert Lindeman
# Description     : Have the EV3-leds blink red amber and green
# Version         : v1.2
# Date            : 2014-08-26
# Usage           : blinkleds
# Notes           : No parameters used
# Copyright       : 2014 Bert Lindeman
# License         : GPL-3.0+
#
#============================================================================
#
# Changelog        
# Date     By       Description
# 20140826 BL       o Added script header
#                   o Show in the terminal what is being done.
# 20140906 BL       o Wait a little linger at each step
#                     Update to kernel 3.16.1 made things FASTER
#                   o Set brightness to more than 1 as this NOW works.
#                     use to make sliding colors
#============================================================================
#
. /usr/local/bin/bert_ev3dev_functions


# echo "   deactivate first"
echo none > /sys/class/leds/ev3\:green\:right/trigger
echo none > /sys/class/leds/ev3\:red\:right/trigger
echo none > /sys/class/leds/ev3\:green\:left/trigger
echo none > /sys/class/leds/ev3\:red\:left/trigger
OFFleds
sleep 0.5s

# red    -- green
echo 255 > /sys/class/leds/ev3\:red\:left/brightness
echo 255 > /sys/class/leds/ev3\:green\:right/brightness
sleep 0.5s

# green  -- red 
echo   0 > /sys/class/leds/ev3\:red\:left/brightness
echo 255 > /sys/class/leds/ev3\:red\:right/brightness
echo 255 > /sys/class/leds/ev3\:green\:left/brightness
echo   0 > /sys/class/leds/ev3\:green\:right/brightness
sleep 0.5s
echo 255 > /sys/class/leds/ev3\:red\:left/brightness
echo   0 > /sys/class/leds/ev3\:red\:right/brightness
echo   0 > /sys/class/leds/ev3\:green\:left/brightness
echo 255 > /sys/class/leds/ev3\:green\:right/brightness
sleep 0.5s

OFFleds

echo 255 > /sys/class/leds/ev3\:green\:left/brightness
echo 255 > /sys/class/leds/ev3\:green\:right/brightness
sleep 1s
OFFgreen
sleep 0.25s
for (( b1=0; b1<=255; b1++ )); do
  echo         $b1   > /sys/class/leds/ev3\:green\:left/brightness
  echo  $((255-$b1)) > /sys/class/leds/ev3\:red\:left/brightness
  echo         $b1   > /sys/class/leds/ev3\:red\:right/brightness
  echo  $((255-$b1)) > /sys/class/leds/ev3\:green\:right/brightness
  sleep 0.005s
done
sleep 1s

OFFleds
#
